html(ng-app="words")
    head
        link(rel='stylesheet', href='/assets/css/index.css')
        link(rel='stylesheet', href='/assets/css/bootstrap.min.css', rel="stylesheet",media="screen")
        meta(name="viewport",content="width=device-width, initial-scale=1.0")
    body#ahoj
        h1 hello
        div(ng-controller="WordWebCtrl").wordwebctrl
            div(ng-repeat="word in words")
                div.wordrow
                    div.identifer
                        span.label.label-warning {{word.link}}
                        span.btn-xs.btn-primary save
                    div.wordcontainer
                        div.row.hide
                            span.col-md-1.word 1
                            span.col-md-1.word 1
                            span.col-md-1.word 1
                            span.col-md-1.word 1
                            span.col-md-1.word 1
                            span.col-md-1.word 1
                            span.col-md-1.word 1
                            span.col-md-1.word 1
                            span.col-md-1.word 1
                            span.col-md-1.word 1
                            span.col-md-1.word 1
                            span.col-md-1.word 1
                        div.row

                            span.col-md-6.word {{word.w1}}

                            span.col-md-6.word {{word.w2}}

                        div.row
                           div.col-md-6
                                input(id="ed_{{word.l1}}_{{word.link}}",value="{{word.w1}}",on-enter="myFunc('{{word.l1}}',{{word.link}})")
                            div.col-md-6
                                input(value="{{word.w2}}")

                        div
                            span.label.label-default {{word.description}}

                    img(src="{{word.image}}").imgpreview




    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js")
    script(src="assets/js/bootstrap.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js")
    script(src="assets/js/controler.js")
