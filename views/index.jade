html(ng-app="words")
    head
        link(rel='stylesheet', href='/assets/css/index.css')
        link(rel='stylesheet', href='/assets/css/bootstrap.min.css', rel="stylesheet",media="screen")
        meta(name="viewport",content="width=device-width, initial-scale=1.0")
    body(ng-controller="WordWebCtrl")#ahoj

        header
            a(ng-click="langChange(0,'en')") en
            div.btn-group
                button(type="button",data-toggle="dropdown").btn.btn-default.dropdown-toggle {{lesson[0]}}
                    span.caret
                ul(role="menu").dropdown-menu
                    li(ng-repeat="lesson in lessons")
                        a(ng-click="langChange(0,lesson)") {{lesson}}

            div.btn-group
                button(type="button",data-toggle="dropdown").btn.btn-default.dropdown-toggle {{lesson[1]}}
                    span.caret
                ul(role="menu").dropdown-menu
                    li(ng-repeat="lang in languages")
                        a(ng-click="langChange(1,lang)") {{lang}}

            div.btn-group
                button(type="button",data-toggle="dropdown").btn.btn-default.dropdown-toggle {{lesson[2]}}
                    span.caret
                ul(role="menu").dropdown-menu
                    li(ng-repeat="lang in languages")
                        a(ng-click="langChange(2,lang)") {{lang}}
        div.shadow

        h1 {{location}}
        div#modal-from-dom.modal.fade
            div.modal-dialog
                div.modal-content
                    div.modal-header
                        a.close &times;
                        h3 delete image
                    div.modal-body
                        p do you realy want delete the picture
                    div.modal-footer
                        a#yesbutton.btn.btn-danger Yes
                        a(href="javascript:$('#modal-from-dom').modal('hide')").btn.btn-primary No

        div.wordwebctrl
            div(ng-repeat="word in words").wordrowcolor
                div.text-center.description
                    span(id="in_{{word.link}}").identifer {{word.link}}
                    span {{word.description}}
                div.head-row
                    div.row
                        span.col-md-6
                            span(id="tv_{{word.l1}}_{{word.link}}").word {{word.o1}}
                            img(src="assets/img/flags/flag_{{word.l1}}.png").flag-left
                        span.col-md-6
                            img(src="assets/img/flags/flag_{{word.l2}}.png").flag-right
                            span(id="tv_{{word.l2}}_{{word.link}}").word {{word.o2}}

                div.wordrow
                    div(id="{{word.link}}_image_select",my-repeat-directive).imagepart
                        img(id="image_{{word.link}}",src="{{word.imagefile}}").imgpreview
                        div(ng-show="word.imagefile",ng-click="deleteImg(word.link)").btn.btn-xs.btn-danger.delete-button x
                        input(type="file",id="image_{{word.link}}_file").fileupload

                    div.wordcontainer
                        div.row
                           div.col-md-6
                                input(id="ed_{{word.l1}}_{{word.link}}",value="{{word.w1}}",on-enter="updateWord(word.l1,word.link)",ng-change="checkWord(word.l1,word.link)",ng-model="word.w1", ng-focus="focusWord(word.l1,word.link)")
                           div.col-md-6
                                input(id="ed_{{word.l2}}_{{word.link}}",value="{{word.w2}}",on-enter="updateWord(word.l2,word.link)",ng-change="checkWord(word.l2,word.link)",ng-model="word.w2", ng-focus="focusWord(word.l2,word.link)")

                        div.row
                            div.col-md-6
                                span(id="in_{{word.l1}}_{{word.link}}",ng-click="updateWord(word.l1,word.link)").label.label-danger.hide save!
                                span(ng-click="showSeznam(word.l1,word.link)").btn.btn-xs.btn-default sl
                                span(ng-click="showGImage(word.l1,word.link)").btn.btn-xs.btn-default gi
                            div.col-md-6
                                span(id="in_{{word.l2}}_{{word.link}}",ng-click="updateWord(word.l2,word.link)").label.label-danger.hide save!
                                span(ng-click="showSeznam(word.l2,word.link)").btn.btn-xs.btn-default sl
                                span(ng-click="showGImage(word.l2,word.link)").btn.btn-xs.btn-default gi


                    div.clearfix


        div#helpers
            div(ng-show="isSeznamShowed")
                span(ng-click="isSeznamShowed=false").btn.btn-xs.btn-default close x
                div
                    iframe.helpers_i#slovnik_seznam_cz
        div
            img#canvasHelper
            canvas(width="128",height="128")#myCanvas


    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js")
    script(src="assets/js/bootstrap.min.js")
    script(src="http://code.angularjs.org/1.2.0-rc.3/angular.min.js")
    script(src="assets/js/imageddc.js")
    script(src="assets/js/controler.js")
    script(src="assets/js/angular-file-upload.min.js")
