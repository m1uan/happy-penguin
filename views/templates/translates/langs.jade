div
    h2 add lang
    form(name="addlangform")
        input(ng-model="lang_code", placeholder="code", type="text" ng-minlength="2" maxlength="2")
        input(ng-model="lang_eng_name", placeholder="translate name in eng", type="text", ng-minlength="3")
        div(ng-click="addlang(addlangform.$valid)").btn.btn-primary.margin-left-10 add
    h2 langs
    table.table
        thead
            td #
            td code
            td translate
            td name
        tr(ng-repeat="lang in langs")
            td {{$index+1}}
            td
                a(href="#/trans/0/{{lang.lang}}") {{lang.lang}}
            td {{lang.translate}}
            td {{lang.name}}
