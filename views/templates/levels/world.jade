        img(src="/assets/img/penguin/ic_swim.png").resource_icon
        span#game_resources_swim {{swim}}
        img(src="/assets/img/penguin/ic_fly.png").resource_icon
        span#game_resources_fly {{fly}}
        img(src="/assets/img/penguin/ic_exp.png").resource_icon
