div#world-main

div#game_resources
    img(src="/assets/img/penguin/ic_walk.png").resource_icon
    span#game_resources_walk {{walk}}
    img(src="/assets/img/penguin/ic_swim.png").resource_icon
    span#game_resources_swim {{swim}}
    img(src="/assets/img/penguin/ic_fly.png").resource_icon
    span#game_resources_fly {{fly}}
    img(src="/assets/img/penguin/ic_exp.png").resource_icon
    span#game_resources_exp {{exp}}

div.hide
    div#place_popover
        div.row
            div.col-xs-4
                div
                    span -
                    span#place_popover_walk
                    img(src="/assets/img/penguin/ic_walk.png").resource_icon
                div
                    span -
                    span#place_popover_swim
                    img(src="/assets/img/penguin/ic_swim.png").resource_icon
                div
                    span -
                    span#place_popover_fly
                    img(src="/assets/img/penguin/ic_fly.png").resource_icon

                div
                    span posx:
                    span#place_popover_posx 0.5
                div
                    span posy:
                    span#place_popover_posy 0.5
                div
                    span distance:
                    span#place_popover_distance 0.5


