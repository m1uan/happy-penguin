link(rel='stylesheet', href='/assets/css/penguin/wordtest.css')


div(ng-show="part==0").wordtest
    h2 welcome in {{place.name}}
    div#introduction {{place.info}}
    span(ng-click="visit()",translate="explore").btn.btn-primary#btn_explore Explore

div(ng-show="part==1").wordtest
    h2 time left {{timer}}

    //canvas#conection-canvas

    div.row
        div.col-md-5
            div(ng-repeat="w in words.word1")
                span {{w.link}}
                span(id="testctn_0 _{{$index}}")
                    span(id="testbtn_0_{{$index}}",ng-click="select(0,w, $event)").btn.btn-default.btn-word {{w.word}}
        div.col-md-2

        div.col-md-5
            div(ng-repeat="w in words.word2")
                span(id="testctn_1_{{$index}}")
                    span(id="testbtn_1_{{$index}}",ng-click="select(1,w, $event)").btn.btn-default.btn-word {{w.word}}
                span {{w.link}}

div(ng-show="part==3").wordtest
    h2 Question
    p {{questionText}}
    div(ng-hide="user_answered")
        input(placeholder="please answer in your jorney language and whole sentence",ng-model="user_answer")
        span(ng-show="user_answer",ng-click="answer()").btn.btn-primary answer
    div(ng-show="user_answered")
        div(ng-show="user_answered==1")
            h3 Wrong answer
            p {{user_answer}}
            h3 possible answers
            p(ng-repeat="answer in questionAnswers") {{answer}}
        div(ng-show="user_answered==2")
            h3 Your answer was correct
            p {{user_answer}}
        div
            span(ng-click="conclusion()").btn.btn-primary conculsion

div(ng-show="part==4").wordtest
    h2 Score
    table
        tr
            td Correct
            td {{correctTotal}}
        tr
            td Wrong
            td {{wrong}}
        tr
            td
                img(src="/assets/img/penguin/ic_walk.png").intro_resource_icon
            td {{score.walk}}
            td
                i Math.round(Correct / 10)

        tr
            td 5 in row
            td {{correctInRowScore[0]}}
        tr
            td 10 in row
            td {{correctInRowScore[1]}}
        tr
            td 15 in row
            td {{correctInRowScore[2]}}
        tr
            td 30 in row
            td {{correctInRowScore[3]}}
        tr
            td 60 in row
            td {{correctInRowScore[4]}}

        tr
            td
                img(src="/assets/img/penguin/ic_swim.png").intro_resource_icon
            td {{score.swim}}
            td
                i Math.round(correctInRow[5]/3 +  correctInRow[10]/2 +  correctInRow[15] +  correctInRow[30]*2.5 +  correctInRow[60]*5.5);
        tr
            td Corrent answer faster than 1s
            td {{fastAnswerScore[0]}}
        tr
            td Corrent answer faster than 2s
            td {{fastAnswerScore[1]}}
        tr
            td Corrent answer faster than 3s
            td {{fastAnswerScore[2]}}
        tr
            td
                img(src="/assets/img/penguin/ic_fly.png").intro_resource_icon
            td {{score.fly}}
            td
                i (fastAnswer[1]+fastAnswer[2]*1.5+fastAnswer[3]*2)
        tr
            td first time visited
            td {{first_time_visit}}
        tr
            td num of correct answers
            td {{user_answered}}

        tr
            td
                img(src="/assets/img/penguin/ic_exp.png").intro_resource_icon
            td {{score.exp}}
    div
        span(ng-click="backToMap()").btn.btn-primary back to map