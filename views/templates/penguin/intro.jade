h2 Help

div
    a(href="#/intro/{{pagePrev}}").btn.btn-default prev {{pagePrev}}
    a(href="#/intro/{{pageNext}}").btn.btn-default next {{pageNext}}

div(translate="intro1",ng-show="page==1") page 1 - {{page}}
div(translate="intro2",ng-show="page==2") page 2 - {{page}}
div(translate="intro3",ng-show="page==3") page 3 - {{page}}
div(ng-show="page==4")
    table.table.table-hover
       tr(ng-repeat="lang in langs")
            td
                img(src="/assets/img/flags/flag_{{lang.lang}}.png")
            td
                div {{lang.translate}}
            td
                div {{lang.cities}}
            td
                div {{lang.questions}}
